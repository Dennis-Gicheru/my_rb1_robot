<?xml version="1.0"?>
<robot name="my_rb2_robot">
    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>

    <material name="gray">
        <color rgba="0.40 0.40 0.40 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>
    <!-- Base footprint: geometric center of the bottom face of the base cylinder -->
    <link name="base_footprint"/>

    <!-- Base link: cylinder 0.5 m diameter (r=0.25 m), height 0.30 m -->
    <link name="base_link">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="23.1"/>
            <!-- Cylinder inertia (axis = z). Ixx = Iyy = (1/12)*m*(3*r^2 + h^2), Izz = 0.5*m*r^2 -->
            <inertia ixx="0.5341875" ixy="0.0" ixz="0.0" iyy="0.5341875" iyz="0.0" izz="0.7225"/>
        </inertial>

        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.25" length="0.30"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.25" length="0.30"/>
            </geometry>
        </collision>
    </link>

    <!-- Fixed joint: base_footprint -> base_link (base_link is 0.15 m above the footprint) -->
    <joint name="base_footprint_to_base_link" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.15" rpy="0 0 0"/>
    </joint>

    <!-- Right drive wheel -->
    <link name="right_wheel">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.5"/>
            <!-- Wheel approximated as solid cylinder (axis = y). radius=0.025, width=0.04 -->
            <!-- Iyy (axis) = 0.5*m*r^2; Ixx=Izz=(1/12)*m*(3r^2 + L^2) -->
            <inertia ixx="0.00014479" ixy="0.0" ixz="0.0" iyy="0.00015625" iyz="0.0" izz="0.00014479"/>
        </inertial>

        <visual>
            <!-- rotate so cylinder axis aligns with joint axis (y) -->
            <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.04"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.04"/>
            </geometry>
        </collision>
    </link>

    <joint name="base_to_right_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0.0 -0.2 -0.15" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- Left drive wheel -->
    <link name="left_wheel">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.5"/>
            <inertia ixx="0.00014479" ixy="0.0" ixz="0.0" iyy="0.00015625" iyz="0.0" izz="0.00014479"/>
        </inertial>

        <visual>
            <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.04"/>
            </geometry>
            <material name="black"/>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.04"/>
            </geometry>
        </collision>
    </link>

    <joint name="base_to_left_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0.0 0.2 -0.15" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- Front caster -->
    <link name="front_caster">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.2"/>
            <!-- caster wheel approximated as small solid cylinder (axis = y). r=0.025, width=0.02 -->
            <inertia ixx="0.00003792" ixy="0.0" ixz="0.0" iyy="0.0000625" iyz="0.0" izz="0.00003792"/>
        </inertial>

        <visual>
            <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
            <!-- Set friction parameters to 0.0 as requested -->
            <surface>
                <friction>
                    <ode>
                        <mu>0.0</mu>
                        <mu2>0.0</mu2>
                    </ode>
                </friction>
            </surface>
        </collision>
    </link>

    <joint name="base_to_front_caster" type="continuous">
        <parent link="base_link"/>
        <child link="front_caster"/>
        <origin xyz="-0.1 0.0 -0.15" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- Back caster -->
    <link name="back_caster">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.2"/>
            <inertia ixx="0.00003792" ixy="0.0" ixz="0.0" iyy="0.0000625" iyz="0.0" izz="0.00003792"/>
        </inertial>

        <visual>
            <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
            <surface>
                <friction>
                    <ode>
                        <mu>0.0</mu>
                        <mu2>0.0</mu2>
                    </ode>
                </friction>
            </surface>
        </collision>
    </link>

    <joint name="base_to_back_caster" type="continuous">
        <parent link="base_link"/>
        <child link="back_caster"/>
        <origin xyz="0.1 0.0 -0.15" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- Front laser (upsidedown): located at (0.25, 0.0, 0.075) relative to base_link and rotated 180 deg around X -->
    <link name="front_laser">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.5"/>
            <!-- box inertia: dims 0.12 x 0.06 x 0.06 -->
            <!-- Ixx = 1/12*m*(y^2 + z^2), Iyy = 1/12*m*(x^2 + z^2), Izz = 1/12*m*(x^2 + y^2) -->
            <inertia ixx="0.0003" ixy="0.0" ixz="0.0" iyy="0.00075" iyz="0.0" izz="0.00075"/>
        </inertial>

        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.12 0.06 0.06"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.12 0.06 0.06"/>
            </geometry>
        </collision>
    </link>

    <joint name="base_to_front_laser" type="fixed">
        <parent link="base_link"/>
        <child link="front_laser"/>
        <!-- position and 180 deg rotation about X (pi rad) -->
        <origin xyz="0.25 0.0 0.075" rpy="3.14159265 0 0"/>
    </joint>

</robot>