<?xml version="1.0" ?>
<robot name="rb1_robot">

<!-- Specify Gazebo color for the base_link -->
<gazebo reference="base_link">
    <visual>
        <material> <!-- Black -->
            <ambient>0.1 0.1 0.1 1.0</ambient>
            <diffuse>0.1 0.1 0.1 1.0</diffuse>
            <specular>0.0 0.0 0.0 1.0</specular>
            <emissive>0.0 0.0 0.0 1.0</emissive>
        </material>
    </visual>
</gazebo>

<!-- Gazebo friction and material properties for left_wheel -->
<gazebo reference="left_wheel">
    <collision>
        <surface>
            <friction>
                <ode>
                   <mu>0.0</mu>
                   <mu2>0.0</mu2>
                </ode>
            </friction>
        </surface>
    </collision>
</gazebo>

<!-- Gazebo friction and material properties for right_wheel -->
<gazebo reference="right_wheel">
    <collision>
        <surface>
            <friction>
                <ode>
                    <mu>0.0</mu>
                    <mu2>0.0</mu2>
                </ode>
            </friction>
        </surface>
    </collision>
</gazebo>

<!-- Gazebo friction and material properties for front_caster -->
<gazebo reference="front_caster">
    <collision>
        <surface>
            <friction>
                <ode>
                    <mu>0.0</mu>
                    <mu2>0.0</mu2>
                </ode>
            </friction>
        </surface>
    </collision>
</gazebo>

<!-- Gazebo friction and material properties for back_caster -->
<gazebo reference="back_caster">
    <collision>
        <surface>
            <friction>
                <ode>
                    <mu>0.0</mu>
                    <mu2>0.0</mu2>
                </ode>
            </friction>
        </surface>
    </collision>
</gazebo>

    <!-- Define materials for visualization -->
    <material name="blue">
        <color rgba="0 0 255 1"/>
    </material>

    <material name="gray">
        <color rgba="0.40 0.40 0.40 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- Base footprint link -->
    <link name="base_footprint"/>
    </link>
    
    <!-- Joint connecting base_link and base_footprint -->
    <!-- TO DO: Set correct joint type -->
    <joint name="base_link_plate_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.15" rpy="0 0 0"/>
    </joint>

    <!-- Base link -->
    <link name="base_link">
           <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="23.1"/>
            <inertia ixx="0.5341875" ixy="0.0" ixz="0.0" iyy="0.5341875" iyz="0.0" izz="0.7225"/>
        </inertial>

        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.25" length="0.30"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.25" length="0.30"/>
            </geometry>
        </collision>
    </link>

    <!-- Left wheel link -->
    <link name="left_wheel">
            <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.5"/>
            <inertia ixx="0.00014479" ixy="0.0" ixz="0.0" iyy="0.00015625" iyz="0.0" izz="0.00014479"/>
        </inertial>

        <visual>
            <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.04"/>
            </geometry>
            <material name="black"/>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.04"/>
            </geometry>
        </collision>
    </link>

    <!-- Joint connecting base_link and left_wheel -->
    <!-- TO DO: Set correct joint type -->
    <joint name="base_link_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0.0 0.2 -0.15" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- Right wheel link -->
    <link name="right_wheel">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.5"/>
            <inertia ixx="0.00014479" ixy="0.0" ixz="0.0" iyy="0.00015625" iyz="0.0" izz="0.00014479"/>
        </inertial>

        <visual>
            <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.04"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.04"/>
            </geometry>
        </collision>
    </link>

    <!-- Joint connecting base_link and right_wheel -->
    <!-- TO DO: Set correct joint type -->
    <joint name="base_link_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0.0 -0.2 -0.15" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- Front caster -->
    <link name="front_caster">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.2"/>
            <inertia ixx="0.00003792" ixy="0.0" ixz="0.0" iyy="0.0000625" iyz="0.0" izz="0.00003792"/>
        </inertial>

        <visual>
            <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
        </collision>
    </link>

    <!-- Joint connecting base_link and front_caster -->
    <!-- TO DO: Set correct joint type -->
    <joint name="base_link_front_caster_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front_caster"/>
        <origin xyz="-0.1 0.0 -0.15" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- Back caster -->
    <link name="back_caster">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.2"/>
            <inertia ixx="0.00003792" ixy="0.0" ixz="0.0" iyy="0.0000625" iyz="0.0" izz="0.00003792"/>
        </inertial>

        <visual>
            <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
        </collision>
    </link>

    <!-- Joint connecting base_link and back_caster -->
    <!-- TO DO: Set correct joint type -->
    <joint name="base_link_back_caster_joint" type="continuous">
        <parent link="base_link"/>
        <child link="back_caster"/>
        <origin xyz="0.1 0.0 -0.15" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- Link representing the front laser scanner -->
    <!--For this robot, the laser is not visible, so we won't define a body for it. -->
    <link name="front_laser">
    </link>

    <!-- Joint connecting base_link and front_laser -->
    <!-- TO DO: Set correct joint type -->
    <joint name="base_link_front_laser_joint" type="fixed">
        <parent link="base_link"/>
        <child link="front_laser"/>
        <origin xyz="0.25 0.0 0.075" rpy="3.14159265 0 0"/>
    </joint>
    <!-- Differential Drive Plugin -->
<gazebo>
    <plugin
        filename="libignition-gazebo-diff-drive-system.so"
        name="ignition::gazebo::systems::DiffDrive">
        <left_joint>base_link_left_wheel_joint</left_joint>
        <right_joint>base_link_right_wheel_joint</right_joint>
        <wheel_separation>1.66</wheel_separation>
        <wheel_radius>0.4</wheel_radius>
        <odom_publish_frequency>20</odom_publish_frequency>
        <topic>cmd_vel</topic>
        <odom_topic>odom</odom_topic>
        <tf_topic>tf</tf_topic>
        <frame_id>odom</frame_id>
        <child_frame_id>base_link</child_frame_id>
    </plugin>
</gazebo>

<!-- Gazebo tags - Laser scan -->
<gazebo reference="joint_laser_scan_chassis">
    <preserveFixedJoint>true</preserveFixedJoint>
</gazebo>
<gazebo reference="link_laser_scan">
    <material>Gazebo/DarkGrey</material>
</gazebo>

<!-- Laser scan -->
<joint name="joint_laser_scan_chassis" type="fixed">
    <origin rpy="0 0 0" xyz="0.8 0 0.3" />
    <child link="front_laser" />
    <parent link="base_link" />
    <joint_properties damping="1.0" friction="1.0" />
</joint>
<link name="link_laser_scan">
    <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.5" />
        <inertia ixx="0.000252666666667" ixy="0" ixz="0" iyy="0.000252666666667" iyz="0" izz="0.0005"/>
    </inertial>
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
            <cylinder radius="0.15" length="0.20"/>
        </geometry>
        <material name="Red">
            <color rgba="0.7 0.1 0.1 1" />
        </material>
    </visual>
    <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <cylinder radius="0.15" length="0.20"/>
        </geometry>
    </collision>
</link>
      <!-- Gazebo tags - Laser scan -->
<gazebo reference="joint_laser_scan_chassis">
    <preserveFixedJoint>true</preserveFixedJoint>
</gazebo>
<gazebo reference="link_laser_scan">
    <material>Gazebo/DarkGrey</material>
</gazebo>

<!-- Laser scan -->
<joint name="joint_laser_scan_chassis" type="fixed">
    <origin rpy="0 0 0" xyz="0.8 0 0.3" />
    <child link="front_lase" />
    <parent link="base_link" />
    <joint_properties damping="1.0" friction="1.0" />
</joint>
<link name="link_laser_scan">
    <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.5" />
        <inertia ixx="0.000252666666667" ixy="0" ixz="0" iyy="0.000252666666667" iyz="0" izz="0.0005"/>
    </inertial>
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
            <cylinder radius="0.15" length="0.20"/>
        </geometry>
        <material name="Red">
            <color rgba="0.7 0.1 0.1 1" />
        </material>
    </visual>
    <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <cylinder radius="0.15" length="0.20"/>
        </geometry>
    </collision>
</link>
</robot>