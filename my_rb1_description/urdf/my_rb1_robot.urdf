<?xml version="1.0"?>
<robot name="rb1_robot">

  <!-- ===== Materials ===== -->
  <material name="blue">
    <!-- rgba values must be 0..1 -->
    <color rgba="0 0 1 1"/>
  </material>

  <material name="gray">
    <color rgba="0.40 0.40 0.40 1"/>
  </material>

  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>

  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>

  <!-- ===== Base footprint (self-closing link) ===== -->
  <link name="base_footprint"/>

  <!-- ===== Joint connecting base_footprint -> base_link ===== -->
  <joint name="base_link_plate_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
  </joint>

  <!-- ===== Base link ===== -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="23.1"/>
      <inertia ixx="0.5341875" ixy="0.0" ixz="0.0" iyy="0.5341875" iyz="0.0" izz="0.7225"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.25" length="0.30"/>
      </geometry>
      <material name="gray"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.25" length="0.30"/>
      </geometry>
    </collision>
  </link>

  <!-- ===== Left wheel ===== -->
  <link name="left_wheel">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.00014479" ixy="0.0" ixz="0.0" iyy="0.00015625" iyz="0.0" izz="0.00014479"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.04"/>
      </geometry>
      <material name="black"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.04"/>
      </geometry>
    </collision>
  </link>

  <joint name="base_link_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0.0 0.2 -0.15" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- ===== Right wheel ===== -->
  <link name="right_wheel">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.00014479" ixy="0.0" ixz="0.0" iyy="0.00015625" iyz="0.0" izz="0.00014479"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.04"/>
      </geometry>
      <material name="black"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.04"/>
      </geometry>
    </collision>
  </link>

  <joint name="base_link_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0.0 -0.2 -0.15" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- ===== Front caster ===== -->
  <link name="front_caster">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.2"/>
      <inertia ixx="0.00003792" ixy="0.0" ixz="0.0" iyy="0.0000625" iyz="0.0" izz="0.00003792"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.02"/>
      </geometry>
      <material name="gray"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.02"/>
      </geometry>
    </collision>
  </link>

  <joint name="base_link_front_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_caster"/>
    <origin xyz="-0.1 0.0 -0.15" rpy="0 0 0"/>
  </joint>

  <!-- ===== Back caster ===== -->
  <link name="back_caster">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.2"/>
      <inertia ixx="0.00003792" ixy="0.0" ixz="0.0" iyy="0.0000625" iyz="0.0" izz="0.00003792"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.02"/>
      </geometry>
      <material name="gray"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.02"/>
      </geometry>
    </collision>
  </link>

  <joint name="base_link_back_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="back_caster"/>
    <origin xyz="0.1 0.0 -0.15" rpy="0 0 0"/>
  </joint>

  <!-- ===== Front laser link (visual + sensor for Gazebo Sim) ===== -->
  <link name="front_laser">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.000252666666667" ixy="0" ixz="0" iyy="0.000252666666667" iyz="0" izz="0.0005"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.10"/>
      </geometry>
      <material name="red"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.10"/>
      </geometry>
    </collision>

    <!-- Gazebo Sim sensor (gpu_lidar) â€” publishes to /laser/scan -->
    <gazebo>
      <sensor name="front_laser_sensor" type="gpu_lidar">
        <update_rate>10</update_rate>
        <topic>laser/scan</topic>
        <ray>
          <scan>
            <horizontal>
              <samples>360</samples>
              <resolution>1</resolution>
              <min_angle>-3.14159</min_angle>
              <max_angle>3.14159</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.12</min>
            <max>8.0</max>
            <resolution>0.01</resolution>
          </range>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.01</stddev>
          </noise>
        </ray>
      </sensor>
    </gazebo>
  </link>

  <joint name="base_link_front_laser_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_laser"/>
    <origin xyz="0.8 0 0.3" rpy="0 0 0"/>
  </joint>

  <!-- ===== Optional visual 'link' for laser geometry (kept removed to avoid duplicates) ===== -->

  <!-- ===== Differential drive plugin for Gazebo Sim (Ignition) ===== -->
  <gazebo>
    <plugin
      filename="libignition-gazebo-diff-drive-system.so"
      name="ignition::gazebo::systems::DiffDrive">
      <!-- joints must match your URDF joint names -->
      <left_joint>base_link_left_wheel_joint</left_joint>
      <right_joint>base_link_right_wheel_joint</right_joint>

      <!-- realistic values matching wheel geometry above -->
      <wheel_separation>0.40</wheel_separation>
      <wheel_radius>0.025</wheel_radius>

      <odom_publish_frequency>20</odom_publish_frequency>
      <topic>cmd_vel</topic>
      <odom_topic>odom</odom_topic>
      <tf_topic>tf</tf_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>
    </plugin>
  </gazebo>

</robot>
