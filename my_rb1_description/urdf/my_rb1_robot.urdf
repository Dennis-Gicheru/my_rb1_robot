<?xml version="1.0"?>
<robot name="rb1_robot">

  <material name="black">
    <color rgba="0.1 0.1 0.1 1"/>
  </material>
  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>
  <material name="grey">
    <color rgba="0.4 0.4 0.4 1"/>
  </material>
  

  <gazebo reference="base_link">
    <visual>
      <material>
        <ambient>0.1 0.1 0.1 1.0</ambient>
        <diffuse>0.1 0.1 0.1 1.0</diffuse>
        <specular>0.5 0.5 0.5 1.0</specular>
      </material>
    </visual>
  </gazebo>

  <gazebo reference="left_wheel">
    <mu1>2.0</mu1>
    <mu2>2.0</mu2>
    <visual>
      <material>
       <ambient>1.0 0.0 0.0 1.0</ambient>
        <diffuse>1.0 0.0 0.0 1.0</diffuse>
        <specular>0.3 0.3 0.3 1.0</specular>
      </material>
    </visual>
  </gazebo>

  <gazebo reference="right_wheel">
    <mu1>2.0</mu1>
    <mu2>2.0</mu2>
    <visual>
      <material>
        <ambient>1.0 0.0 0.0 1.0</ambient>
        <diffuse>1.0 0.0 0.0 1.0</diffuse>
        <specular>0.3 0.3 0.3 1.0</specular>
      </material>
    </visual>
  </gazebo>

  <gazebo reference="front_caster">
    <mu1>0.0</mu1>
    <mu2>0.0</mu2>
    <visual>
      <material>
        <ambient>0.4 0.4 0.4 1.0</ambient>
        <diffuse>0.4 0.4 0.4 1.0</diffuse>
      </material>
    </visual>
  </gazebo>

  <gazebo reference="back_caster">
    <mu1>0.0</mu1>
    <mu2>0.0</mu2>
    <visual>
      <material>
        <ambient>0.4 0.4 0.4 1.0</ambient>
        <diffuse>0.4 0.4 0.4 1.0</diffuse>
      </material>
    </visual>
  </gazebo>

  <gazebo reference="front_laser">
    <visual>
      <material>
        <ambient>1.0 0.0 0.0 1.0</ambient>
        <diffuse>1.0 0.0 0.0 1.0</diffuse>
        <specular>0.2 0.2 0.2 1.0</specular>
      </material>
    </visual>
  </gazebo>

  <link name="base_footprint"/>

  <joint name="base_link_plate_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
  </joint>

  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="23.1"/>
      <inertia ixx="0.5341875" ixy="0.0" ixz="0.0" iyy="0.5341875" iyz="0.0" izz="0.7225"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.25" length="0.30"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.25" length="0.30"/>
      </geometry>
    </collision>
  </link>

  <link name="left_wheel">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.00014479" ixy="0.0" ixz="0.0" iyy="0.00015625" iyz="0.0" izz="0.00014479"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.04"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.04"/>
      </geometry>
    </collision>
  </link>

  <joint name="base_link_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0.0 0.2 -0.15" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="right_wheel">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.00014479" ixy="0.0" ixz="0.0" iyy="0.00015625" iyz="0.0" izz="0.00014479"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.04"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.04"/>
      </geometry>
    </collision>
  </link>

  <joint name="base_link_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0.0 -0.2 -0.15" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="front_caster">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.2"/>
      <inertia ixx="0.00003792" ixy="0.0" ixz="0.0" iyy="0.0000625" iyz="0.0" izz="0.00003792"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.02"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.02"/>
      </geometry>
    </collision>
  </link>

  <joint name="base_link_front_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_caster"/>
    <origin xyz="-0.1 0.0 -0.15" rpy="0 0 0"/>
  </joint>

  <link name="back_caster">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.2"/>
      <inertia ixx="0.00003792" ixy="0.0" ixz="0.0" iyy="0.0000625" iyz="0.0" izz="0.00003792"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.02"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.02"/>
      </geometry>
    </collision>
  </link>

  <joint name="base_link_back_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="back_caster"/>
    <origin xyz="0.1 0.0 -0.15" rpy="0 0 0"/>
  </joint>

  <link name="front_laser">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.000145833" ixy="0" ixz="0" iyy="0.000145833" iyz="0" izz="0.000125"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.10"/>
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.10"/>
      </geometry>
    </collision>
    <gazebo>
      <sensor name="front_laser_sensor" type="gpu_lidar">
        <update_rate>10</update_rate>
        <topic>scan</topic>
        <ray>
          <scan>
            <horizontal>
              <samples>360</samples>
              <resolution>1</resolution>
              <min_angle>-3.14159</min_angle>
              <max_angle>3.14159</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.12</min>
            <max>8.0</max>
            <resolution>0.01</resolution>
          </range>
        </ray>
      </sensor>
    </gazebo>
  </link>

  <joint name="base_link_front_laser_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_laser"/>
    <origin xyz="0.25 0 0.15" rpy="0 0 0"/>
  </joint>

  <gazebo>
    <plugin
      filename="libignition-gazebo-diff-drive-system.so"
      name="ignition::gazebo::systems::DiffDrive">
      <left_joint>base_link_left_wheel_joint</left_joint>
      <right_joint>base_link_right_wheel_joint</right_joint>
      <wheel_separation>0.40</wheel_separation>
      <wheel_radius>0.025</wheel_radius>
      <odom_publish_frequency>20</odom_publish_frequency>
      <topic>cmd_vel</topic>
      <odom_topic>odom</odom_topic>
      <tf_topic>tf</tf_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>
    </plugin>
  </gazebo>

</robot>