<?xml version="1.0" ?>
<robot name="rb1_robot">

  <material name="black"><color rgba="0.1 0.1 0.1 1.0"/></material>
  <material name="red"><color rgba="1 0 0 1"/></material>
  <material name="gray"><color rgba="0.4 0.4 0.4 1"/></material>

  <gazebo reference="base_link">
    <visual>
      <material>
        <ambient>0.1 0.1 0.1 1.0</ambient>
        <diffuse>0.1 0.1 0.1 1.0</diffuse>
        <specular>0.5 0.5 0.5 1.0</specular>
      </material>
    </visual>
  </gazebo>

  <gazebo reference="left_wheel">
    <collision>
      <surface>
        <friction><ode><mu>2.0</mu><mu2>2.0</mu2></ode></friction>
      </surface>
    </collision>
    <visual><material><ambient>1 0 0 1</ambient><diffuse>1 0 0 1</diffuse></material></visual>
  </gazebo>

  <gazebo reference="right_wheel">
    <collision>
      <surface>
        <friction><ode><mu>2.0</mu><mu2>2.0</mu2></ode></friction>
      </surface>
    </collision>
    <visual><material><ambient>1 0 0 1</ambient><diffuse>1 0 0 1</diffuse></material></visual>
  </gazebo>

  <gazebo reference="front_caster">
    <collision><surface><friction><ode><mu>0.0</mu><mu2>0.0</mu2></ode></friction></surface></collision>
  </gazebo>
  <gazebo reference="back_caster">
    <collision><surface><friction><ode><mu>0.0</mu><mu2>0.0</mu2></ode></friction></surface></collision>
  </gazebo>

  <link name="base_footprint"/>

  <joint name="base_link_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
  </joint>

  <link name="base_link">
    <inertial>
      <mass value="23.1"/>
      <inertia ixx="0.534" ixy="0.0" ixz="0.0" iyy="0.534" iyz="0.0" izz="0.722"/>
    </inertial>
    <visual>
      <geometry><cylinder radius="0.25" length="0.30"/></geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.25" length="0.30"/></geometry>
    </collision>
  </link>

  <link name="left_wheel">
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.00014" ixy="0.0" ixz="0.0" iyy="0.00015" iyz="0.0" izz="0.00014"/>
    </inertial>
    <visual>
      <origin rpy="-1.5708 0 0"/>
      <geometry><cylinder radius="0.025" length="0.04"/></geometry>
      <material name="red"/>
    </visual>
    <collision>
      <origin rpy="-1.5708 0 0"/>
      <geometry><cylinder radius="0.025" length="0.04"/></geometry>
    </collision>
  </link>

  <joint name="base_link_left_wheel_joint" type="continuous">
    <parent link="base_link"/><child link="left_wheel"/>
    <origin xyz="0.0 0.2 -0.15" rpy="0 0 0"/><axis xyz="0 1 0"/>
  </joint>

  <link name="right_wheel">
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.00014" ixy="0.0" ixz="0.0" iyy="0.00015" iyz="0.0" izz="0.00014"/>
    </inertial>
    <visual>
      <origin rpy="-1.5708 0 0"/>
      <geometry><cylinder radius="0.025" length="0.04"/></geometry>
      <material name="red"/>
    </visual>
    <collision>
      <origin rpy="-1.5708 0 0"/>
      <geometry><cylinder radius="0.025" length="0.04"/></geometry>
    </collision>
  </link>

  <joint name="base_link_right_wheel_joint" type="continuous">
    <parent link="base_link"/><child link="right_wheel"/>
    <origin xyz="0.0 -0.2 -0.15" rpy="0 0 0"/><axis xyz="0 1 0"/>
  </joint>

  <link name="front_caster">
    <inertial><mass value="0.1"/><inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/></inertial>
    <visual><origin rpy="-1.5708 0 0"/><geometry><cylinder radius="0.025" length="0.02"/></geometry></visual>
    <collision><origin rpy="-1.5708 0 0"/><geometry><cylinder radius="0.025" length="0.02"/></geometry></collision>
  </link>
  <joint name="front_caster_joint" type="fixed">
    <parent link="base_link"/><child link="front_caster"/><origin xyz="0.1 0.0 -0.15"/>
  </joint>

  <link name="back_caster">
    <inertial><mass value="0.1"/><inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/></inertial>
    <visual><origin rpy="-1.5708 0 0"/><geometry><cylinder radius="0.025" length="0.02"/></geometry></visual>
    <collision><origin rpy="-1.5708 0 0"/><geometry><cylinder radius="0.025" length="0.02"/></geometry></collision>
  </link>
  <joint name="back_caster_joint" type="fixed">
    <parent link="base_link"/><child link="back_caster"/><origin xyz="-0.1 0.0 -0.15"/>
  </joint>

  <link name="front_laser">
    <inertial><mass value="0.01"/><inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/></inertial>
    <visual><geometry><cylinder radius="0.01" length="0.01"/></geometry></visual>
  </link>
  <joint name="front_laser_joint" type="fixed">
    <parent link="base_link"/><child link="front_laser"/><origin xyz="0.25 0.0 0.075" rpy="0 0 0"/>
  </joint>

  <gazebo>
    <plugin filename="libignition-gazebo-diff-drive-system.so" name="ignition::gazebo::systems::DiffDrive">
      <left_joint>base_link_left_wheel_joint</left_joint>
      <right_joint>base_link_right_wheel_joint</right_joint>
      <wheel_separation>0.4</wheel_separation>
      <wheel_radius>0.025</wheel_radius>
      <topic>cmd_vel</topic>
      <odom_topic>odom</odom_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_footprint</child_frame_id>
    </plugin>
  </gazebo>

  <gazebo reference="front_laser">
    <sensor type="gpu_lidar" name="front_laser_sensor">
      <topic>/scan</topic> 
      <update_rate>10</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1</resolution>
            <min_angle>-3.14</min_angle>
            <max_angle>3.14</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.2</min>
          <max>10.0</max>
        </range>
      </ray>
      <always_on>1</always_on>
      <visualize>true</visualize>
    </sensor>
  </gazebo>

  <gazebo>
    <plugin
      filename="ignition-gazebo-sensors-system"
      name="ignition::gazebo::systems::Sensors">
      <render_engine>ogre2</render_engine>
    </plugin>
  </gazebo>
</robot>